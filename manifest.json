  "exports": {
    "types": "types.js"
  },

  "defaultDocument": "",

  "lib": ".",

  "configuration": {
    "apiKey": {
      "description": "Your segment.io write key.",
      "type": "string"
    },
    "jobTypePrefix": {
      "description": "Prefix for the job types to register.",
      "type": "string",
      "default": "segment-io."
    },
    "maxFailures": {
      "description": "Maximum number of times to retry a job if it fails.",
      "type": "integer",
      "default": 0
    }
  }
}
